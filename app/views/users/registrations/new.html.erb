<div class="row-fluid">
   <div class="valign col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-4 col-xs-12">
      <h1 class="text-center signika"><i class="fa fa-sign-in"></i> Register New Account</h1>
   </div>
</div>

<div class="row-fluid">
  <div class="col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-4 col-xs-12">

      <% if devise_error_messages!.present? %>
       <div class="alert alert-danger devise-error">
        <%= devise_error_messages! %>
       </div>
      <% end %>

   <div class="box box-light-blue">
      <div class="box-header">
         <div class="box-title signika">
            <b>Social Real - New Account</b>
         </div>
      </div>
   
   <div class="box-body bg-white">
        <%= form_for(resource, :as => resource_name, 
         :url => registration_path(resource_name)) do |f| %>
      
          <div class="form-group"> 
             <div class="input-group">
                <span class="input-group-addon control">
                 <i class="fa fa-envelope"></i> Your Email
                </span>
                <%= f.email_field :email, :autofocus => true, 
                 class: 'form-control', placeholder: 'Your email' %>   
             </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
           <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group"> 
             <div class="input-group">
               <span class="input-group-addon control">
                <i class="fa fa-lock"></i> Password
               </span>      
              <%= f.password_field :password, 
               class: 'form-control', placeholder: 'Your Password' %>
             </div>
          </div>

          <div class="form-group"> 
             <div class="input-group">
              <span class="input-group-addon control">
               <i class="fa fa-lock"></i> Retype Password
              </span> 
              <%= f.password_field :password_confirmation, class: 'form-control',
               placeholder: 'Retype Password' %>
             </div>
          </div>

<div class="form-group"> 
 <div class="input-group">
  <span class="input-group-addon control">
   <i class="fa fa-list"></i> Terms of use
  </span> 
 </div>     
 <textarea class="form-control" rows="7" disabled="disabled">
 <%= render "terms_of_use" %>                
 </textarea>
</div>

          <div class="checkbox">
           <label>
            <%= f.check_box :terms_of_use %> I have read and I accept the Social Real Terms of Use
           </label>
          </div>

          <div class="form-group">   
             <%= f.submit "Continue", class: 'btn-block btn btn-light-blue' %>
          </div>

        <% end %>
    
    </div>
   </div>
  </div>
</div>

<%= javascript_include_tag "jquery", "jquery_ujs", "data-turbolinks-track" => true %>