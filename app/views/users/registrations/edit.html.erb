<div class='col-xs-12'>
  <div class='box-body'>
   
   <% if devise_error_messages!.present? %>
    <div class="alert alert-danger devise-error">
      <%= devise_error_messages! %>
    </div>
   <% end %>
   

   <%= form_for(resource, :as => resource_name, 
         :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
     
     <div class="form-group">
       <label class="control-label">Your email</label>
       <div class="input-group col-sm-4">
         <span class="input-group-addon control"><i class="fa fa-envelope"></i></span>
         <%= f.email_field :email, class: 'form-control' %> 
       </div>
     </div>

     <div class="form-group">
       <label class="control-label">Type your new password</label>
       <div class="input-group col-sm-4">
         <span class="input-group-addon control"><i class="fa fa-lock"></i></span>
         <%= f.password_field :password, :autocomplete => "off", class: 'form-control',
               placeholder: "Leave blank if you don't want to change it" %> 
       </div>
     </div>

     <div class="form-group">
       <label class="control-label">Retype your new password</label>
       <div class="input-group col-sm-4">
         <span class="input-group-addon control"><i class="fa fa-lock"></i></span>
         <%= f.password_field :password_confirmation, class: 'form-control',
               placeholder: 'Retype Password' %>
       </div>
     </div>

     <div class="form-group">
       <label class="control-label">Please, type your current password</label>
       <div class="input-group col-sm-4">
         <span class="input-group-addon control"><i class="fa fa-lock"></i></span>
         <%= f.password_field :current_password, class: 'form-control',
              placeholder: "We need to confirm your changes" %>
       </div>
     </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
     <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">    
       <%= f.submit "Update", class: 'btn-block btn btn-light-blue' %>
    </div>

   <% end %>

  <h3>Unhappy? Cancel my account</h3>
  <%= button_to "Cancel my account", registration_path(resource_name),
     :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger' %>

  <br />
  <%= link_to "Back", dashboard_path %>

  </div>
</div>